<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.zhiruili.videoconf.RecentCallsFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/called_account_input_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ib_add_called_account"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_called_account_input"
            android:hint="@string/label_called_account_input_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/ib_add_called_account"
        android:src="@drawable/ic_add_black_24dp"
        android:tint="@android:color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/called_account_input_layout"
        app:layout_constraintBottom_toBottomOf="@+id/called_account_input_layout"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:contentDescription="@string/ib_add_called_party_description" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/fbl_waited_to_called_buffer"
        android:scrollbars="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"
        app:alignItems="flex_start"
        app:alignContent="space_between"
        app:layout_constraintLeft_toLeftOf="@+id/called_account_input_layout"
        app:layout_constraintRight_toRightOf="@+id/ib_add_called_account"
        app:layout_constraintTop_toBottomOf="@+id/called_account_input_layout" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_start_calling"
        android:text="@string/label_start_calling_btn"
        android:visibility="gone"
        style="@style/Widget.AppCompat.Button"
        app:layout_constraintTop_toBottomOf="@id/fbl_waited_to_called_buffer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_recent_calls_list"
        android:scrollbars="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_calling" />

</android.support.constraint.ConstraintLayout>
