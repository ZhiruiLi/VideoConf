<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_call_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_call_time"
        app:layout_constraintStart_toStartOf="@+id/tv_call_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_call_id"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_call_in_or_out"
        app:layout_constraintStart_toEndOf="@+id/tv_call_time"
        app:layout_constraintTop_toTopOf="@+id/tv_call_time"
        app:layout_constraintBottom_toBottomOf="@+id/tv_call_time"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>